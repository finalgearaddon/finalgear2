<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.finalgear" name="Final Gear" version="1.3" provider-name="Griffin_Evolve">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="0.0.1"/>
    <import addon="script.module.urlresolver"  version="0.0.1"/>
    <import addon="script.module.liveresolver" version="0.0.1"/>
    <import addon="script.module.nanscrapers" version="0.5"/>
    <import addon="script.common.plugin.cache" version="0.0.1"/>
    <import addon="script.module.metahandler" version="0.0.1"/>
    <import addon="plugin.video.youtube" optional="true" />

  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Final Gear video Addon, Thanks to original devs on addon code and Goliath for helping set up. find me on twitter @Griffin_Evolve</summary>
    <description lang="en">The author does not host or distribute any of the content displayed by this addon. The author does not have any affiliation with the content provider.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.arb" name="FinalGear Repository" version="1.0" provider-name="Griffin">
	<extension point="xbmc.addon.repository" name="FinalGear Repository">
		<info compressed="false">http://raw.github.com/finalgearaddon/finalgear2/master/addons.xml</info>
		<checksum>http://raw.github.com/finalgearaddon/finalgear2/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/finalgearaddon/finalgear2/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>FinalGear Repository</summary>
		<description>Home of the Final Gear Addon</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
